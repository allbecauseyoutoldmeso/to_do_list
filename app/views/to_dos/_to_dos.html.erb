<%= content_tag(:div, data: { controller: 'to-dos' }) do %>
  <%= content_tag(:ul) do %>
    <%= render(partial: 'to_do', collection: to_dos) %>
  <% end %>
  <%= simple_form_for(
    [new_to_do.list, new_to_do],
    html: {
      data: {
        action: 'submit->to-dos#create'
      }
    }
  ) do |form| %>
    <%= form.input(:task, label: false) %>
    <%= form.submit %>
  <% end %>
<% end %>
