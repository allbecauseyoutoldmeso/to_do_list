<%= content_tag(
  :div,
  class: 'to-do-details',
  data: { controller: 'requests' }
) do %>
  <%= content_tag(:h1, @to_do.task) %>
  <%= link_to(
    @list.name,
    list_to_dos_path(@list),
    class: 'action-item'
  ) %>
  <%= render(
    partial: 'to_dos/task',
    locals: { list: @list, to_do: @to_do, update_task: @update_task }
  ) %>
  <%= render(
    partial: 'to_dos/state',
    locals: { list: @list, to_do: @to_do }
  ) %>
  <%= render(
    partial: 'to_dos/scheduled_date',
    locals: {
      list: @list,
      to_do: @to_do,
      convert_to_scheduled: @convert_to_scheduled,
      update_scheduled_date: @update_scheduled_date
   }
  ) %>
<% end %>
