<%= content_tag(:table) do %>
  <%= content_tag(:tr) do %>
    <%= content_tag(:th, I18n.t('to_dos.show.task')) %>
    <%= content_tag(:th, to_do.task) %>
  <% end %>
  <%= content_tag(:tr) do %>
    <%= content_tag(:th, I18n.t('to_dos.show.state')) %>
    <%= content_tag(:th, I18n.t("to_do.states.#{to_do.state}")) %>
  <% end %>
  <% if to_do.scheduled? %>
    <%= content_tag(:tr) do %>
      <%= content_tag(:th, I18n.t('to_dos.show.scheduled_date')) %>
      <%= content_tag(:th, display_date(to_do.scheduled_date)) %>
    <% end %>
  <% end %>
<% end %>
