<%= content_tag(:div, data: { controller: 'show-hide' }) do %>
  <%= render(
    partial: 'list_name',
    locals: {
      list: @list,
      rename_list: RenameList.new(@list)
    }
  ) %>
  <%= render(partial: 'list_actions', locals: { list: @list } ) %>
  <%= render(
    partial: 'to_dos',
    locals: { list: @list, new_to_do: @new_to_do }
  ) %>
<% end %>
