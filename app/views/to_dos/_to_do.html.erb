<%= content_tag(:li) do %>
  <%= content_tag(
    :span,
    to_do.task,
    class: to_do.state
  ) %>
  <%= simple_form_for(
    [to_do.list, to_do],
    html: {
      data: {
        action: 'change->requests#submitForm'
      }
    }
  ) do |form| %>
    <%= form.input(
      :state,
      label: false,
      collection: state_options(to_do),
      selected: to_do.state
    ) %>
  <% end %>
<% end %>
