<%= content_tag(:li) do %>
  <%= content_tag(
    :span,
    to_do.task,
    class: ('done' if to_do.done?)
  ) %>
  <%= simple_form_for(
    [to_do.list, to_do],
    html: {
      data: {
        action: 'change->to-dos#update'
      }
    }
  ) do |form| %>
    <%= form.input(
      :state,
      label: false,
      collection: to_do_state_options,
      selected: to_do.state
    ) %>
  <% end %>
<% end %>
