<%= content_tag(:li) do %>
  <%= content_tag(:span, scheduled_to_do.task) %>
  <%= content_tag(
    :span,
    display_date(scheduled_to_do.scheduled_date),
    class: 'scheduled-date'
  ) %>
  <%= simple_form_for(
    [list, scheduled_to_do],
    html: {
      data: {
        action: 'submit->requests#submitForm'
      }
    }
  ) do |form| %>
    <%= form.hidden_field(:state, value: :archived) %>
    <%= form.submit(class: 'archive-button') %>
  <% end %>
<% end %>
