<%= content_tag(:li) do %>
  <%= content_tag(:div, class: 'scheduled-to-do') do %>
    <%= link_to(
      scheduled_to_do.task,
      list_to_do_path(list, scheduled_to_do)
    ) %>
    <%= content_tag(
      :span,
      display_date(scheduled_to_do.scheduled_date),
      class: 'scheduled-date'
    ) %>
  <% end %>
  <%= render(
    partial: 'archive_scheduled/edit',
    locals: {
      list: list,
      scheduled_to_do:  scheduled_to_do
    }
  ) %>
<% end %>
