<%= content_tag(
  :div,
  data: { controller: 'requests' },
  class: 'list-email'
) do %>
  <%= simple_form_for(
    ListEmail.new,
    html: {
      data: {
        action: 'submit->requests#submitForm'
      }
    }
  ) do |form| %>
    <%= form.input(
      :list_id,
      as: :hidden,
      input_html: { value: list.id }
    ) %>
    <%= form.submit(
      value: t('to_dos.index.email_list'),
      class: 'action-item list-email-button',
      data: {
        disable_with: t('to_dos.index.sending_email')
      }
    ) %>
  <% end %>
  <% if email_sent %>
    <%= content_tag(
      :p,
      t('to_dos.index.email_sent'),
      class: 'list-email-confirmation'
    ) %>
  <% end %>
<% end %>
