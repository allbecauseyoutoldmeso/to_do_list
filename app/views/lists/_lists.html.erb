<%= content_tag(:div, data: { controller: 'lists' }) do %>
  <%= content_tag(:ul) do %>
    <% lists.each do |list| %>
      <%= content_tag(:li) do %>
        <%= link_to(list.name, list_to_dos_path(list)) %>
      <% end %>
    <% end %>
    <%= simple_form_for(
      new_list,
      html: {
        data: {
          action: 'submit->lists#create'
        }
      }
    ) do |form| %>
      <%= form.input(:name, label: false) %>
      <%= form.submit %>
    <% end %>
  <% end %>
<% end %>
