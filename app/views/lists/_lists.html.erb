<%= content_tag(:div, data: { controller: 'lists' }) do %>
  <%= content_tag(:ul) do %>
    <%= render(partial: 'list', collection: lists) %>
  <% end %>
  <%= simple_form_for(
    new_list,
    html: {
      data: {
        action: 'submit->lists#submitForm'
      }
    }
  ) do |form| %>
    <%= form.input(
      :name,
      label: false,
      input_html: { title: t('lists.index.name') }
    ) %>
    <%= form.submit %>
  <% end %>
<% end %>
